{
  "id": "paint",
  "title": "Paint Calculator",
  "description": "Calculate gallons of paint needed",
  "aboutDescription": "Calculate how many gallons of paint you need for your room.",
  "icon": "Paintbrush",
  "resultTitle": "Paint Requirements",
  "category": "calculators",
  "fields": [
    {
      "name": "length",
      "label": "Room Length (feet)",
      "type": "number",
      "placeholder": "Enter length",
      "required": true
    },
    {
      "name": "width",
      "label": "Room Width (feet)",
      "type": "number",
      "placeholder": "Enter width",
      "required": true
    },
    {
      "name": "height",
      "label": "Wall Height (feet)",
      "type": "number",
      "placeholder": "Enter height",
      "required": true
    },
    {
      "name": "coats",
      "label": "Number of Coats",
      "type": "select",
      "options": [
        { "value": "1", "label": "1 Coat" },
        { "value": "2", "label": "2 Coats" },
        { "value": "3", "label": "3 Coats" }
      ],
      "required": true
    }
  ],
  "sections": [
    {
      "title": "Formula",
      "type": "list",
      "content": [
        "Wall Area: $A = 2(\\text{length} \\times \\text{height}) + 2(\\text{width} \\times \\text{height})$",
        "Gallons Needed: $G = \\frac{A \\times \\text{coats}}{350}$"
      ]
    },
    {
      "title": "Coverage",
      "type": "list",
      "content": [
        "One gallon covers approximately 350 square feet",
        "This assumes smooth walls and one coat",
        "Textured walls may require more paint"
      ]
    }
  ]
}
